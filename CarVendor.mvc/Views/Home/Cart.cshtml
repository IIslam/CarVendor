<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/js/jquery.min.js"></script>
<script src="~/Content/js/bootstrap.min.js"></script>
<script src="~/Content/js/angular.min.js"></script>
<script src="~/Content/js/Module.js"></script>
<script src="~/Content/js/CartCTR.js"></script>


<div ng-app="myApp" ng-controller="CartCTR">


    <div class="table-responsive">
        <table class="table">
            <thead class="thead-dark" style="background-color:gray">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Brand</th>
                    <th scope="col">Car Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Color</th>
                    <th scope="col">Price of Car</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Price of All</th>
                    <th scope="col">Del</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in Items">
                    <th scope="row">{{$index+1}}</th>
                    <td>{{item.Brand}}</td>
                    <td>{{item.CarName}}</td>
                    <td>{{item.Category.Text}}</td>
                    <td>{{item.Color.Text}}</td>
                    <td>{{item.Price}}</td>
                    <td> <input type="number" class="form-control" min="1" ng-change="QuantityChange()" ng-model="item.Quantity"></td>
                    <td>{{item.Price*item.Quantity}} </td>
                    <td>
                        <a href="#" ng-click="DeleteItem($index)">
                            <span class="glyphicon glyphicon-remove"></span>
                        </a>
                    </td>
                </tr>

            </tbody>
        </table>
    </div>

    <div class="row" >
        <div class="form-group col-lg-12 col-md-12 col-sm-12">

            <div class="container form-group ">
                <h4 style="background-color:gray" class="col-lg-6" >Total Price <label style="margin-left:50%;color:brown"  >{{totalPrice}}</label></h4>
                <h4 style="background-color:gray" class="col-lg-6">Total Quantity <label style="margin-left:50%;color:brown">{{totalQuantity}}</label></h4>
            </div>
            <div class="form-group col-lg-12 col-md-12 col-sm-12" style="direction:rtl">
                <button type="button"  class="btn btn-success" ng-click="GoToCustomerInfo()">Check Out</button>
            </div>
        </div>
        </div>


</div>
