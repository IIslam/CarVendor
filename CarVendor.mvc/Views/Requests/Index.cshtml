@model IEnumerable<CarVendor.data.Entities.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderItems)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeliveryDetails)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @foreach (var order in item.OrderItems)
                {
                    <div>

                        <span>
                            @order.Car.Name
                        </span>
                        <span>
                            @order.Car.Model
                        </span>
                        <span>
                          Quantity:  @order.Quantity
                        </span>
                        <span>
                            @order.Color
                        </span>
                        <span>
                            @order.Category
                        </span>
                    </div>

                }

            </td>
            <td>
                @{ }
                @Html.DisplayFor(modelItem => item.DeliveryDetails.FirstName))
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
